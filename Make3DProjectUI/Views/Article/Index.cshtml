@model IEnumerable<Make3DProjectUI.Models.ArticleASPModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomCreateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_envoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_modif)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomCreateur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_envoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_modif)
            </td>
            <td>
                <a class="btn btn-primary" asp-area="" asp-controller="Article" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                @switch (item.Statut)
                {
                    case Make3DProjectBLL.Models.ArticleStatutEnum.Ok:
                        <a class="btn btn-danger" asp-area="" asp-controller="Article" asp-action="Bloquer" asp-route-id="@item.Id">Bloquer</a>
                        break;
                    case Make3DProjectBLL.Models.ArticleStatutEnum.Signaler:
                        <a class="btn btn-warning" asp-area="" asp-controller="Article" asp-action="Designaler" asp-route-id="@item.Id">Désignaler</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Article" asp-action="Bloquer" asp-route-id="@item.Id">Bloquer</a>
                        break;
                    case Make3DProjectBLL.Models.ArticleStatutEnum.Bloquer:
                        <a class="btn btn-success" asp-area="" asp-controller="Article" asp-action="Debloquer" asp-route-id="@item.Id">Débloquer</a>
                        break;
                        default:
                        break;
                        }
                    </td>
        </tr>
}
    </tbody>
</table>
