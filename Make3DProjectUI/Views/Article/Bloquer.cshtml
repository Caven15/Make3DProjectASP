@model Make3DProjectUI.Models.Forms.MotivationForm

@{
    ViewData["Title"] = "Bloquer";
}

<h1>Bloquer</h1>

<h4>MotivationForm</h4>
<h3>Voulez vous vraimment bloquer cet article ?</h3>
<div>
    <h4>Détail de l'article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.NomCreateur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.NomCreateur)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Date_envoi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Date_envoi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Date_modif)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Date_modif)
        </dd>
    </dl>

    <div class="col-md-4">
        <form asp-action="Bloquer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Motivation" class="control-label"></label>
                <input asp-for="Motivation" class="form-control" />
                <span asp-validation-for="Motivation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmer" class="btn btn-primary" />
                <a asp-action="Index">Annuler</a>
            </div>
        </form>
    </div>

  
</div>

<div>
    <a asp-action="Index">Retour a la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
